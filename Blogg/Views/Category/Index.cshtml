@model IEnumerable<Blogg.Models.CategoryModel>

    @{
        ViewBag.Title = "Kategoriler";
    }

    <h2>Kategori Listesi</h2>
    <hr />  
    @if (TempData["Kategori"] != null)
    {
        var kategori = (Blogg.Models.Category)TempData["Kategori"];
        <div class="alert alert-success">
            <strong>@kategori.KategoriAdi</strong> Kayıt Edildi.
        </div>
    }
    <p>
        @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table  table-bordered table-hover table-striped">
        <tr>
            <th style="width: 70%">
                @Html.DisplayNameFor(model => model.KategoriAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogSayisi)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.KategoriAdi
                </td>
                <td>
                    @item.BlogSayisi
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }


    </table>
